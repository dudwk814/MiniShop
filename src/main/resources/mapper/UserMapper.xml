<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">

    <resultMap id="userMap" type="domain.UserVO">
        <id property="user_no" column="user_no"/>
        <result property="user_no" column="user_no"/>
        <result property="user_id" column="user_id"/>
        <result property="user_pw" column="user_pw"/>
        <result property="user_pw2" column="user_pw2"/>
        <result property="user_name" column="user_name"/>
        <result property="regDate" column="regDate"/>
        <result property="address" column="address"/>
        <result property="enabled" column="enabled"/>
        <collection property="authList" resultMap="authMap"></collection>
    </resultMap>

    <resultMap id="authMap" type="domain.authVO">
        <result property="user_no" column="user_no"/>
        <result property="auth" column="auth"/>
    </resultMap>

    <!-- 단일 회원 조회 -->
    <select id="get" resultMap="userMap">
        <![CDATA[
            select
                usr.user_no, user_id, user_pw, user_pw2, user_name, enabled, address, regDate, auth
            from
                tbl_user usr left outer join tbl_user_auth auth on usr.user_no = auth.user_no
            where user_id = #{user_id} and user_pw = #{user_pw}
        ]]>
    </select>

    <!-- 전체 회원 조회 -->
    <select id="getList" resultType="domain.UserVO">
        <![CDATA[
            select * from tbl_user where user_no > 0
        ]]>
    </select>

    <insert id="register">
        <![CDATA[
            insert into tbl_user (user_no, user_id, user_pw, user_pw2, user_name, address, regDate)
            values (seq_member.nextval, #{user_id}, #{user_pw}, #{user_pw2}, #{user_name}, #{address}, sysdate)
        ]]>
    </insert>

    <update id="update">
        <![CDATA[
            update tbl_user set user_pw = #{user_pw}, user_pw2 = #{user_pw2}, address = #{address} where user_no = #{user_no}
        ]]>
    </update>

    <delete id="delete">
        <![CDATA[
            delete from tbl_user where user_no = #{user_no}
        ]]>
    </delete>
</mapper>