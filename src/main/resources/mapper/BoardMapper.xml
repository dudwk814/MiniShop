    <!-- 게시글 업데이트 MariaDB -->
    <update id="update">
        <![CDATA[
            update tbl_board set title = #{title}, content = #{content} where bno = #{bno}
        ]]>
    </update>

    <delete id="delete">
        delete from tbl_board where bno = #{bno}
    </delete>

    <update id="plusReplyCnt">
        update tbl_board set replyCnt = replyCnt + 1 where bno = #{bno}
    </update>

    <update id="minusReplyCnt">
        update tbl_board set replyCnt = replyCnt - 1 where bno = #{bno}
    </update>
