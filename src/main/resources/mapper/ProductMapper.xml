    <!-- 전체 상품 목록 조회 -->
    <select id="getProductList" resultType="domain.ProductVO">

        select
               *
        from
             tbl_product
        /*order by product_id asc*/
        where
            product_id > 0
            <if test="price_from != null and price_from > 0">
                <![CDATA[and product_price >= #{price_from}]]>
            </if>
            <if test="price_to != null and price_to > 0">
                <![CDATA[and product_price <= #{price_to}]]>
            </if>
            <if test="brand != null and brand != ''">
                <![CDATA[and brand = #{brand}]]>
            </if>
            <choose>
                <when test="sort == 'asc'">
                    order by product_price asc, product_id asc
                </when>
                <when test="sort == 'desc'">
                    order by product_price desc, product_id asc
                </when>
                <otherwise>
                    order by product_id asc
                </otherwise>
            </choose>
        limit
            #{pageStart}, #{amount}
    </select>

    <!-- 상품 전체 개수 -->
    <select id="getTotalCount" resultType="int">
        select count (*) from tbl_product
    </select>

    <!-- 단일 상품 조회 -->
    <select id="getProduct" resultType="domain.ProductVO">
        select * from tbl_product where product_id = #{product_id}
    </select>

    <!-- 상품 수정 -->
    <update id="updateProduct">
        update tbl_product set product_price = #{product_price}, product_name = #{product_name}, product_desc = #{product_desc}, product_url = #{product_url}, brand = #{brand} where product_id = #{product_id}
    </update>


    <!-- 상품 삭제 -->
    <delete id="deleteProduct">
        delete from tbl_product where product_id = #{product_id}
    </delete>
