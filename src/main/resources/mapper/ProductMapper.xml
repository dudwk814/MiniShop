<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.ProductMapper">

    <!-- 홈 화면 신 상품 -->
    <select id="getHomeProductList" resultType="domain.ProductVO">
        <![CDATA[[
            select rownum rn, product_id, product_name, product_price, product_desc, product_url
            from tbl_product
            where rownum <= 6
            order by product_id desc
        ]]>
    </select>

    <!-- 전체 상품 목록 조회 -->
    <select id="getProductList" resultType="domain.ProductVO">
        select * from tbl_product where product_id > 0
    </select>

    <!-- 단일 상품 조회 -->
    <select id="getProduct" resultType="domain.ProductVO">
        select * from tbl_product where product_id = #{product_id}
    </select>
</mapper>